# shell aliases

# list files
alias ll='ls -alF' # all for all, l for details, F for \ symbols
alias la='ls -AF'  #
alias l='ls -CF'   #

# manipulating files
alias mkdir='mkdir -p'

# soft
alias vim='nvim'
alias lg='lazygit'

# clean Nvim Cache
alias nvim-clean-cache='rm ~/.local/share/nvim/packer_compiled.lua && rm -rf ~/.cache/nvim && rm -rf ~/.local/site/nvim && rm -rf ~/.local/share/nvim && rm -rf ~/.cache/nvim'
